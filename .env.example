# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Admin Authentication (single user)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$10$YourBcryptHashHere

# Anthropic API key
ANTHROPIC_API_KEY=

# External API for Author Images
AUTHOR_IMAGE_API_URL=https://api.example.com/images
AUTHOR_IMAGE_API_KEY=your-api-key-if-needed

# Definition API Configuration
DEFINITION_API_PROVIDER=free-dictionary
# MERRIAM_WEBSTER_API_KEY=your-api-key-here  # Uncomment if using Merriam-Webster

# Definition Update Configuration
DEF_BATCH_SIZE=50
DEF_RATE_LIMIT_MS=1000
DEF_MAX_REQUESTS=100
DEF_RETRY_NOT_FOUND_DAYS=90
DEF_RETRY_ERROR_DAYS=7
